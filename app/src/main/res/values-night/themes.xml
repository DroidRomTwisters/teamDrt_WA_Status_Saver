<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhatsAppStatusSaver" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/material_grey_850</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/material_grey_850</item>
        <item name="colorOnSecondary">@color/purple_500</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="colorControlNormal">@color/purple_500</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>

        <item name="customColorValue">@color/material_grey_850</item>
    </style>

    <style name="Theme.WhatsAppStatusSaver.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:backgroundTint">@color/material_grey_850</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>


</resources>